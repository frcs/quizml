{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuizMLYaml Quiz Schema",
  "description": "Schema for quizml YAML files.",
  "type": "array",
  "definitions": {
    "markdown": {
      "type": "string",
      "format": "markdown"
    }
  },
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "The type of the question or part."
      }
    },
    "required": ["type"],
    "allOf": [
      {
        "if": { "properties": { "type": { "const": "ma" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "cols": { "type": "integer", "default": "1" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "choices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "x": { "$ref": "#/definitions/markdown" },
                  "o": { "$ref": "#/definitions/markdown" }
                }
              }
            }
          },
          "required": ["question", "choices"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "mc" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "cols": { "type": "integer", "default": "1" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "choices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "x": { "$ref": "#/definitions/markdown" },
                  "o": { "$ref": "#/definitions/markdown" }
                }
              }
            }
          },
          "required": ["question", "choices"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "tf" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },

            "figure-split": { "type": "number" },
            "answer": { "type": "boolean" }
          },
          "required": ["question", "answer"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "essay" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "4" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "answer": { "type": "string" }
          },
          "required": ["question"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "matching" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "choices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "A": { "$ref": "#/definitions/markdown" },
                  "B": { "$ref": "#/definitions/markdown" }
                },
                "required": ["A", "B"]
              }
            }
          },
          "required": ["question", "choices"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "ordering" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "cols": { "type": "integer", "default": "1" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "choices": {
              "type": "array",
              "items": { "$ref": "#/definitions/markdown" }
            }
          },
          "required": ["question", "choices"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "fill" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "answers": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["question", "answers"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "mfill" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "answers": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "required": ["question", "answers"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "num" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "marks": { "type": "number", "default": "2.5" },
            "comments": { "$ref": "#/definitions/markdown" },
            "question": { "$ref": "#/definitions/markdown" },
            "figure": { "$ref": "#/definitions/markdown" },
            "figure-split": { "type": "number" },
            "answer": { "type": ["number", "string"] },
            "tolerance": { "type": "number" }
          },
          "required": ["question", "answer"]
        }
      },
      {
        "if": { "properties": { "type": { "const": "part" } } },
        "then": {
          "properties": {
            "type": { "type": "string" },
            "title": {  "$ref": "#/definitions/markdown" },
            "marks": { "type": "number" },
            "question": { "$ref": "#/definitions/markdown" }
          }
        }
      }
    ]
  }
}
