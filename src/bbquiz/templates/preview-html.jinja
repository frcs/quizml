<!DOCTYPE html>
<html dir="ltr" lang="en">
  <head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>Quiz</title>
    <style type="text/css">
	 html * {
	 font-family: sans-serif;
     	 line-height: 1.35;	 
	 }
     p {
		 max-width: 40em;
		 page-break-before: avoid;
	     margin: 0.5em 0;
	 }	 
	 .incorrect {
		 color: black;
		 background: none;
		 border: none;				   		 
	 }
	 .correct {
		 color: black;
		 background: none;
		 border: none;				   		 
	 }
     .correct.showanswers {
		color: #3c763d;
		background: #dff0d8;		 
		border-color: #d6e9c6;
		max-width: 34em;
		 /* border: 1px solid; */
		border-radius: 4px;
	}
    .incorrect.showanswers {
		color: #a94442;
		background: #f2dede;
		border-color: #ebccd1;
		max-width: 34em;
		/* border: 1px solid; */
		border-radius: 4px;				   
	 }
	 li p:first-child {
		 margin-top: 0em;
	 }
	 li p:last-child {
		 margin-bottom: 0em;
	 }
	 li {margin: 0.5em 0em}

	 ol.question-list {
		 list-style: none;
		 counter-reset: item;
	 }
	 ol.answers {
		 list-style: lower-latin;
		 counter-reset: item;
	 }
	 li.question li:first-child {
		 margin-top: 1.5em;
     }
	 ol.question-list {
		 margin: 0em 0em 0em -2em;
	 }
	 ol.question-list li.question {
		 margin: 1.25em 0em;
		 counter-increment: item;
		 margin-bottom: 5px;
	 }
	 ol.question-list li.question:before {
	     margin-right: 10px;
	     margin-bottom: 1em;
		 content: "QUESTION " counter(item);
		 font-size: 100%;
		 font-weight: 600;
	     display: inline-block;}
	 .question {
	     border: 1px solid lightgray;
		 border-radius: 4px;
		 padding: 1.5em;
	 }
	 
	 ol { max-width: 40em; page-break-before: avoid; }
     li { max-width: 40em; page-break-before: avoid; }
    </style>
  </head>
  <body>
<p><i>Total Possible Marks: 10.0 </i>  <button onclick="toggleShowAnswers()" style="float:right">Show Answers</button>
    <ol class='question-list'>
<| for q in questions |>
<li class='question' id='Q<< loop.index >>' style='vertical-align: top;'>
<| if q.type == 'essay' |>
<i> Essay [ << q.marks >> ]</i>
<<q.question>>
<| if q.answer is defined |>
  <div style='background:#eee; max-width: 34.5em;
			  padding: 1em; margin-bottom:1em; margin-top:1em'>
  <p style='margin:0 0 1em 0'><i>indicative answer:</i></p>
  <<q.answer>>
</div>
  <| else |>
  <div style='background:#eee; max-width: 34.5em;
			  padding: 1em; margin-bottom:1em; margin-top:1em'>
	no indicative answer given.
  </div>	
  <| endif |>
<| elif q.type == 'mc'|>
<i> Multiple Choice [ << q.marks >> ]</i>
<<q.question>>
<ol class='answers'>
<|-   for a in q.answers |>
<|        if a.correct   -|>
   <li class='correct'>
<|-        else          -|>  
   <li class='incorrect'>
<|-        endif          |>  
<<a.answer>>
</li>
<|-    endfor +|>
</ol>
<| elif q.type == 'ma'|>
<i> Multiple Answers [ << q.marks >> ]</i>
<<q.question>>
<ol class='answers'>
<|-   for a in q.answers |>
<|        if a.correct   -|>
   <li class='correct'>
<|-       else          -|>  
   <li class='incorrect'>
<|-       endif          |>  
<<a.answer>>
</li>
<|-   endfor +|>
</ol>
<| elif q.type == 'matching' |>
  <i> Matching [ << q.marks >> ]</i>
<<q.question>>
<ol class='answers'>
<|-   for a in q.answers |>
	<li>
	  <ol>
		<li>
		  <div class='block'
			   style='border-left:2px solid; padding-left:1em;
					  border-color: #f2f;max-width: 30.25em;'>
			<< a.answer >>
		  </div>
		</li>
		<li>
		  <div class='block'
			   style='border-left:2px solid; border-color: #2ff;
					  padding-left:1em; max-width: 30.25em;'>
            << a.correct >> 
          </div>
	    </li>
	  </ol>
	</li>
<|-    endfor +|>
</ol>
<| elif q.type == 'ordering' |>
  <i> Ordering [ << q.marks >> ]</i>
<<q.question>>
<ol class='answers'>
  <|-   for a in q.answers |>
  <li>
	<div class='block'
		 style='border-left:2px solid; padding-left:1em;
				border-color: #f2f;max-width: 30.25em;'>
	  << a.answer >>
	</div>
  </li>
  <|-    endfor +|>
</ol>
<|- endif          |>
  </li>
<| endfor |>
	</ol>	

<script>


  function toggleShowAnswers() {
	 var elements = document.getElementsByClassName("correct");
	 console.log(elements)
	 for (let i=0; i<elements.length; i++){ 
		 elements[i].classList.toggle("showanswers");
	 }
	 var elements = document.getElementsByClassName("incorrect");
	 console.log(elements)
	 for (let i=0; i<elements.length; i++){ 
		 elements[i].classList.toggle("showanswers");
	 }
 }
</script>

  </body>
</html>


